.img {
  margin: 0 50rpx;
  width: 650rpx;
  height: 400rpx;
  background: #F6F6F6;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
  opacity: 1;
}

.title {
  margin-left: 50rpx;
  margin-top: 60rpx;
  width: 240rpx;
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #2C2C2C;
}

.desc {
  margin: 30rpx auto 0;
  width: 650rpx;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #2C2C2C;
}

.confirm-button {
  display: flex;
  margin: 0px 50rpx;
  background-color: #337fff;
  border-radius: 45rpx;
}

.confirm-button-content {
  font-family: PingFang SC;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 56rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
}

.desc-second{
  text-align: center;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #337FFF;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}

.popUp{
  margin: 0 auto;
  width: 700rpx;
  height: 465rpx;
  background: #FFFFFF;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  opacity: 1;
}
.popUp-ttile{
  margin:50rpx 50rpx 0;
  width: 600rpx;
  font-size: 40rpx;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #2C2C2C;
}
.popUp-desc{
  margin: 40rpx 50rpx 0;
  width: 600rpx;
  height: 141rpx;
  font-size: 32rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #2C2C2C;
}